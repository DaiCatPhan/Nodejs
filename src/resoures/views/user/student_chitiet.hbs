<div class="container">
    <table class="table table-bordered mt-5">
        <thead>
            <tr>
            <th scope="col"><b>#</b></th>
            <th scope="col"><b>Tên</b></th>
            <th scope="col"><b>MSSV</b></th>
            <th scope="col"><b>Bài làm</b></th>
            <th scope="col"><b>Điểm số </b></th>
            </tr>
        </thead>
        <tbody >
            {{#each data}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.ten}}</td>
            <td>{{this.mssv}}</td>
            <td><a href="{{this.image}}">{{this.image}}</a></td>
            <td>{{this.point}}</td>
            </tr>
            {{/each}}  
        </tbody>
</table>
</div>